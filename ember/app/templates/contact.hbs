{{home-button}}
{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}
<form {{action 'sendMessage' fromAddress fromName message on='submit'}} class="contact-form">
  {{textarea type='text' value=message placeholder="Message" cols=45 rows=10}}
  <div class='right'>
    {{input type="email" value=fromAddress placeholder="Your Email"}}
    {{input value=fromName placeholder="Your Name"}}
    {{g-recaptcha sitekey="6Lc7ryETAAAAAIczuHfglZlOJnhKQuEateWfiHSf"}}
    <button class="ladda-button" data-style="slide-right"><span class="ladda-label">Send Message</span></button>
  </div>
</form>
